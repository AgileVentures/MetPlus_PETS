%div{:id => "#{task_type}-tasks"}
  = render partial: 'tasks/tasks', :locals => {all_tasks: all_tasks, task_type: task_type}
%script{:type=>"text/javascript"}
  $(document).ready( function() {
  =  "TaskManagerHolder('#{task_type}-tasks', '#{task_type}')"
  } );
- if @render_modal
  - @render_modal = false
  %div{id: "assignTaskModal", class: 'modal fade'}
    .modal-dialog(role='document')
      %form{ :action => "#", :method => "patch" }
        .modal-content
          .modal-header
            %button(type='button' class='close' data-dismiss='modal')
              %span(aria-hidden='true') &times;
            %h4.modal-title
              Assign user
          .modal-body
            .form-group
              %label(for="assignTaskModal_name" class='control-label')
                Select the user to assign the task to:
              .row
                .col-md-4
                  %select{:id => 'task_assign_select', :style => 'width: 100%;'}
          .modal-footer
            %button(type='button' class='btn btn-default'
            data-dismiss='modal') Cancel
            %button(type='submit' class='btn btn-primary'
            id='assignTaskModal_button')
              Assign