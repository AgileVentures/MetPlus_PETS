%table.table.table-hover
	%thead
		%tr
			%th
				= sort_link(@query, :title)
			%th
				= sort_link(@query, :description)
			%th
				= sort_link(@query, :company_name, 'Company')
			%th
				= sort_link(@query, :shift)
			-# %th
			-# 	= sort_link(@query, :fulltime)
			%th
				= sort_link(@query, :address_state)
			%th
				= sort_link(@query, :address_city)
	%tbody
		- @jobs.each do |job|
			%tr
				%td
					= job.title
				%td
					= job.description
				%td
					= job.company.name
				%td
					= job.shift
				-# %td
				-# 	= job.fulltime
				%td
					-if job.address
						= job.address.state
				%td
					-if job.address
						= job.address.city
= will_paginate @jobs, param_name: 'job_search_page',
											 params: {controller: 'jobs',
															  action: 'search_jobs_list'}
