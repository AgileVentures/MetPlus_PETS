.nested-fields
  %ul(class='list-inline')
    %li
      = f.label :skill_id, 'Name', class: 'job-skill-label'
      = f.collection_select(:skill_id, Skill.order(:name), :id, :name,
                          {include_blank: true})
    %li
      = f.check_box :required
      = f.label :required, 'Required', class: 'job-skill-label'
    %li
      = f.label :min_years, 'Min years', class: 'job-skill-label'
      %div
        = f.collection_select(:min_years, ['']+(0..20).to_a, :to_s, :to_s)
    %li
      = f.label :max_years, 'Max years', class: 'job-skill-label'
      %div
        = f.collection_select(:max_years, ['']+(0..20).to_a, :to_s, :to_s)
    %li
      = link_to_remove_association 'remove job skill', f
