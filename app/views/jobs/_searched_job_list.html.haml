%table.table.table-hover
  %thead
    %tr
      %th
        = sort_link(@query, :title)
      %th
        = sort_link(@query, :description)
      %th
        = sort_link(@query, :company_name, 'Company')
      %th
        = sort_link(@query, :shift)
      %th
        = sort_link(@query, :address_state)
      %th
        = sort_link(@query, :address_city)
      %th
        = sort_link(@query, :status)
  %tbody
    - @jobs.each do |job|
      %tr
        %td
          = link_to highlight(job.title, @title_words), job_path(job)
        %td
          = highlight(truncate(job.description, length: 200), @description_words)
        %td
          = job.company.name
        %td
          = job.shift
        %td
          - if job.address
            = job.address.state
        %td
          - if job.address
            = job.address.city
        %td
          - if job.status.capitalize == "Active"
            %span.label.label-active
              #{job.status.capitalize}
          - elsif job.status.capitalize == "Filled"
            %span.label.label-filled
              #{job.status.capitalize}
          - elsif job.status.capitalize == "Revoked"
            %span.label.label-revoked
              #{job.status.capitalize}

= will_paginate @jobs
