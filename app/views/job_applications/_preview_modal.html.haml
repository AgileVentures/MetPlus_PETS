#previewModal.modal.fade{:role => "dialog", :tabindex => "-1"}
  .modal-dialog{:role => "document"}
    .modal-content#job-apply-modal-id
      .modal-header
        %button.close{"aria-label" => "Close", "data-dismiss" => "modal",
        :type => "button"}
          %span{"aria-hidden" => "true"} Ã—
        %h4.modal-title.text-center
          .row
            = link_to job.company.name, company_home_path(job.company)
          .row
            #{job.title} (#{job.company_job_id})
      .modal-body
        %h4
          Applicant's details:
        .row
          .col-sm-12#job_seeker
        %p
          .row
            .col-sm-2.warning-text
              Warning:
            .col-sm-10
              This application will send the job seeker's resume to the employer.
          .row
            .col-sm-12.col-sm-offset-2
              Press "Apply Now" to complete.
      .modal-footer
        %button.btn.btn-default{"data-dismiss" => "modal",
          :type => "button"} Close
        %a.btn.btn-primary#previewModal_button{rel: "nofollow", 
                                               data: { method: "get"}} Apply Now


