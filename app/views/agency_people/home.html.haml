%h2
  = "Welcome back to PETS, #{pets_user.full_name(last_name_first: false)}"
  = link_to edit_profile_agency_person_path(pets_user),
    :title => 'Edit profile',
    :id => 'edit-profile' do
    %i.fa.fa-pencil-square-o.fa-1

%h3 Your Open Tasks
= render partial: 'tasks/tasks_structure' , :locals => {task_type: @task_type}

- if @agency_person.is_job_developer?(@agency)
  %h3 Your Job Seekers (as Job Developer)
  - if @your_jobseekers_jd.empty?
    %i There are no job seekers assigned to you yet.
  - else
    .col-sm-10
      %table.table.table-hover
        %thead
          %tr
            %td
              %strong Name
            %td
              %strong Status
            %td
              %strong Last Login
            %td
              %strong Match Jobs
        %tbody
          - @your_jobseekers_jd.each do |js|
            %tr
              %td
                = js.full_name
              %td
                - unless js.job_seeker_status.nil?
                  = js.status.short_description
              %td
                - if js.last_sign_in_at.nil?
                  %i never
                - else
                  = js.last_sign_in_at
              %td
                -# NOTE: only show link if job seeker has résumé on file
                - if js.resumes.empty?
                  %i no resume on file
                - else
                  = link_to match_jobs_job_seeker_path(js), method: :get do
                    %span.glyphicon.glyphicon-search

    = will_paginate @your_jobseekers_jd, param_name: 'your_jobseekers_jd_page'
    .clearfix

- if @agency_person.is_case_manager?(@agency)
  %h3 Your Job Seekers (as Case Manager)
  - if @your_jobseekers_cm.empty?
    %i There are no job seekers assigned to you yet.
  - else
    .col-sm-10
      %table.table.table-hover
        %thead
          %tr
            %td
              %strong Name
            %td
              %strong Status
            %td
              %strong Last Login
            %td
              %strong Match Jobs
        %tbody
          - @your_jobseekers_cm.each do |js|
            %tr
              %td
                = js.full_name
              %td
                - unless js.job_seeker_status.nil?
                  = js.job_seeker_status.short_description
              %td
                - if js.last_sign_in_at.nil?
                  %i never
                - else
                  = js.last_sign_in_at
              %td
                %a{'data-toggle': 'modal', 'data-target': '#no_match_modal'}
                  %span.glyphicon.glyphicon-search

    = will_paginate @your_jobseekers_cm, param_name: 'your_jobseekers_cm_page'
    .clearfix

  %h3 Job Seekers Without a Case Manager
  - if @js_without_cm.empty?
    %i All job seekers have a Case Manager at the moment.
  -else
    .col-sm-9

    = render partial: 'job_seekers' , :locals => {jobseekers: @js_without_cm}

- if @agency_person.is_job_developer?(@agency)
  %h3 Your Job Seekers
  - if @your_jobseekers_jd.empty?
    %i There are no job seekers assigned to you yet.
  - else
    .col-sm-9

    = render partial: 'job_seekers' , :locals => {jobseekers: @your_jobseekers_jd}

  %h3 Job Seekers without a Job Developer
  - if @js_without_jd.empty?
    %i All job seekers have a Job Developer at the moment.
  - else
    .col-sm-10
      %table.table.table-hover
        %thead
          %tr
            %td
              %strong Name
            %td
              %strong Status
            %td
              %strong Last Login
        %tbody
          - @js_without_jd.each do |js|
            %tr
              %td
                = js.full_name
              %td
                - unless js.job_seeker_status.nil?
                  = js.job_seeker_status.short_description
              %td
                - if js.last_sign_in_at.nil?
                  %i never
                - else
                  = js.last_sign_in_at
    = will_paginate @js_without_jd, param_name: 'js_without_jd_page'

#no_match_modal.modal.fade(role='dialog' tabindex='-1')
  .modal-dialog
    .modal-content
      .modal-header
        %button.close(type='button' class='close' data-dismiss='modal')
          %span(aria-hidden='true') &times;
        %h4.modal-title
          No Matching Jobs
      .modal-body
        %p
          We were not able to find any jobs that are a match with this
          job seeker's résumé
      .modal-footer
        %button.btn.btn-default(type='button'
                  data-dismiss='modal') Close
