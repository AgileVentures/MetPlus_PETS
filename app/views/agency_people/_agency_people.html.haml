.col-sm-3
  %h4 Agency Personnel

.col-sm-9
  - if agency_people.empty?
    %h4 There are no agency people.
  - else
    #people_table.collapse.in
      %table{:class => 'table table-bordered'}
        %thead
          %tr
            %td
              %strong Name
            %td
              %strong Role(s)
            %td
              %strong Status
        %tbody
          - agency_people.each do |person|
            %tr
              %td
                = link_to person.full_name, agency_person_path(person)
              %td
                = person.agency_roles.pluck(:role).join(', ')
              %td
                = person.status if person.status
