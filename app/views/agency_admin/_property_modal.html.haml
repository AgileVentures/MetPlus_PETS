%div{id: "#{modal_id}", class: 'modal fade'}
  .modal-dialog(role='document')
    .modal-content
      .modal-header
        %button(type='button' class='close' data-dismiss='modal')
          %span(aria-hidden='true') &times;
        %h4.modal-title
          = modal_title
      .modal-body
        %div{id: "#{modal_id}_errors"}
        .form-group
          %label(for="#{modal_id}_name" class='control-label')
            Name:
          %textarea(class='form-control' id="#{modal_id}_name")
        .form-group
          %label(for="#{modal_id}_desc" class='control-label')
            Description:
          %textarea(class='form-control' id="#{modal_id}_desc")
      .modal-footer
        %button(type='button' class='btn btn-default'
                                 data-dismiss='modal') Cancel
        %button(type='button' class='btn btn-primary'
                id="#{modal_id}_button")
          = modal_submit
